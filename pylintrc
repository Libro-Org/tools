[MASTER]
# Third-party code that we don't want to lint
ignore=vendor

# lxml is a C extension and pylint outputs lots of useless "errors" about it
extension-pkg-whitelist=lxml

[MESSAGES CONTROL]
disable=W0511,line-too-long,too-many-nested-blocks,too-many-branches,too-many-statements,too-many-boolean-expressions,too-many-lines,too-many-locals,broad-except,bare-except,too-few-public-methods,too-many-arguments,too-many-instance-attributes,bad-continuation,too-many-public-methods,R1732,R0402,C0206

[FORMAT]
indent-string=\t

[SIMILARITIES]
min-similarity-lines=15
